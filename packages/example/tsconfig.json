{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "target": "es2022",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true ,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "/opt/nodejs/*": [
        "../layers/src/common/nodejs/*"
      ],
      "@/*": [
        "./*"
      ]
    }
  }
}